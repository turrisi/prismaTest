// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Product {
  id       Int        @id @unique
  title    String
  number   String
  Category Category[]
  Brand    Brand[]
  License  License[]
}

model Category {
  id        Int      @id @unique @default(autoincrement())
  name      String
  Product   Product? @relation(fields: [ProductId], references: [id])
  ProductId Int
}

model Brand {
  id        Int      @id @unique @default(autoincrement())
  name      String
  Product   Product? @relation(fields: [ProductId], references: [id])
  ProductId Int
}

model License {
  id        Int      @id @unique @default(autoincrement())
  name      String
  Product   Product? @relation(fields: [ProductId], references: [id])
  ProductId Int
}
